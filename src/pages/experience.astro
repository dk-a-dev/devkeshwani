---

<style>
  .card-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    padding: 40px;
  }
  .experience-container {
    margin: 0 auto;
    max-width: 800px;
  }
  @media (max-width: 800px) {
    .card-grid {
      justify-content: center;
    }
  }
</style>

<BaseLayout title="dk-a-dev/experince">
  <div class="experience-container">
    <ExperienceHeader summary={summary} technicalSkills={technicalSkills} />
    <div class="card-grid">
      {
        experiences.map((exp) => (
          <ExpCard
            position={exp.position}
            company={exp.company}
            location={exp.location}
            duration={exp.duration}
            description={exp.description}
            technologies={exp.technologies}
            logo={exp.logo}
            link={exp.link}
          />
        ))
      }
    </div>
  </div>
</BaseLayout>
