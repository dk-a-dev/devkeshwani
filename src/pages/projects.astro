---
import BaseLayout from '../layout/BaseLayout.astro';
---

<style>
  .lottie-container {
    width: 300px;
    height: 300px;
    margin: 20px auto;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeIn 2s ease-in-out;
    z-index: 2;
    position: relative;
  }

  .message {
    text-align: center;
    color: #e6e206; /* Muddy color */
    font-family: 'Arial Black', Gadget, sans-serif;
    font-size: 24px;
    margin-top: 10px;
    animation: fadeIn 2s ease-in-out;
    z-index: 2;
    position: relative;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<BaseLayout title="projects dk-a-dev">
  <div class="lottie-container">
    <dotlottie-player 
      src="https://lottie.host/446a2c73-6ca7-426e-a50e-7e8f1568811f/LBgGfLi93l.json" 
      background="transparent" 
      speed="1" 
      style="width: 100%; height: 100%;" 
      loop 
      autoplay>
    </dotlottie-player>
  </div>
  <div class="message">
    Under construction
  </div>
</BaseLayout>

<script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>